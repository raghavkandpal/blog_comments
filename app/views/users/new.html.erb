<div class="signup">
	<div class="container">
		<div class="form">

      <h1>Sign Up</h1>
            <%= form_for(:user, url: users_path) do |f| %> 
            <%= f.label :name %><br>
            <%= f.text_field :name %>
            <br>
            <%= f.label :email %><br>
            <%= f.email_field :email %> 
            <br>
            <%= f.label :password %><br>
            <%= f.password_field :password %> 
            <br><br>
            <%= f.submit "Sign Up"%>
            <% end %>

    </div>
	</div>
</div>