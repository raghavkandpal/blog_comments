<div class="login">
	<div class="container">
		<div class="form">

    <h1>Log In</h1>
    <%= form_for(:session, url: login_path) do |f| %> 
        <%= f.label :email %><br>
        <%= f.email_field :email %> 
        <br>
        <%= f.label :password %><br>
        <%= f.password_field :password %> 
        <br><br>
        <%= f.submit "Log in", class: "btn-submit" %>
    <% end %>

    </div>
	</div>
</div>